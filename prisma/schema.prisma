generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Product model based on existing interface
model Product {
  id            Int          @id @default(autoincrement())
  title         String
  image         String
  price         Float
  productTypeId Int
  type          ProductType  @relation(fields: [productTypeId], references: [id])
  order         Int
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  ingredients   Ingredient[]

  @@map("products")
}

// Ingredient model
model Ingredient {
  id        Int     @id @default(autoincrement())
  name      String
  quantity  Int
  productId Int
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("ingredients")
}

model ProductType {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  products Product[]

  @@map("product_types")
}
